- title t('.title')

= form_tag admin_cross_domain_sessions_url(:host => @target, :port => request.port), :method => 'post' do

  = hidden_field_tag 'token', current_admin.switch_site_token

  .inner
    %p.notice= t('.notice')

  .footer
    = box_button_tag t('admin.buttons.switch_to_site')

:javascript
  $(document).ready(function() { $('form').submit(); });